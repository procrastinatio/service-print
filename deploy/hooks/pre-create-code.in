#!/bin/sh

PROJECT_NAME=$1
CODE_DIR=$2


export PGUSER='${vars:modwsgi_user}'

if [ $TARGET != 'demo' ];
then

   cd $CODE_DIR

   echo "running unit tests (wd: '$(pwd)')"

   buildout/bin/nosetests chsdi/tests/functional

   buildout/bin/nosetests -e test_external_links # > /dev/null 2>&1

fi

exit $?
