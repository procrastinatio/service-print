#!/bin/sh

PROJECT_NAME=$1
CODE_DIR=$2


export PGUSER='${vars:modwsgi_user}'

if [ -z $TARGET ] || [ $TARGET != 'demo' ];
then

   cd $CODE_DIR

   echo "running unit tests (wd: '$(pwd)')"

   buildout/bin/nosetests chsdi/tests/functional

   buildout/bin/nosetests -I test_links.py -I mapproxy/test_wmtscapabilities.py -I test_wmtsgettile.py -I test_varnish.py # > /dev/null 2>&1

fi

exit $?
